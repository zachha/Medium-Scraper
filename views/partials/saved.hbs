<div class="cardTop">
    {{#each savedArticles}}
    <div class="card">
        <h5 class="card-header bg-dark text-light">{{category}}</h5>
        <div class="card-body">
            <h5 class="card-title">{{title}}
                <button class="btn btn-danger saved" data-id={{_id}}>Remove Saved</button>
            </h5>
            <p class="card-text">{{summary}}</p>
            <a href="{{link}}" class="btn btn-primary" target="_blank">Link to Article</a>
            <button class="btn btn-success seeNotes" data-id={{_id}}>See Notes</button>
        </div>
    </div>
    {{/each}}
</div>
